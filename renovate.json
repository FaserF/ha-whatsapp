{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "⬆️",
  "packageRules": [
    {
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "@whiskeysockets/baileys"
      ],
      "ignoreUnstable": false,
      "description": "Allow release candidates for Baileys"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "homeassistant/core"
      ],
      "description": "Track Home Assistant core versions",
      "automerge": false
    }
  ]
}