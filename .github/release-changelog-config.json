{
    "categories": [
        {
            "title": "âœ¨ Features",
            "labels": [
                "feature",
                "feat"
            ]
        },
        {
            "title": "ğŸ› Bug Fixes",
            "labels": [
                "fix",
                "bug"
            ]
        },
        {
            "title": "ğŸ“ Documentation",
            "labels": [
                "docs"
            ]
        },
        {
            "title": "ğŸ“¦ Dependencies",
            "labels": [
                "dependency"
            ]
        },
        {
            "title": "ğŸ”§ Maintenance & CI",
            "labels": [
                "chore"
            ]
        },
        {
            "title": "ğŸ§ª Tests",
            "labels": [
                "test"
            ]
        }
    ],
    "ignore_labels": [
        "ignore",
        "no-changelog"
    ],
    "sort": "ASC",
    "template": "# ${{TITLE}}\n\n${{CHANGELOG}}\n",
    "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
    "commit_template": "- ${{MESSAGE}}",
    "empty_template": "No significant changes in this release.",
    "label_extractor": [
        {
            "pattern": "^(?i)(feat|feature|add)(\\s*\\(.*?\\))?:",
            "target": "feature",
            "on_property": "message"
        },
        {
            "pattern": "^(?i)fix(\\s*\\(.*?\\))?:",
            "target": "fix",
            "on_property": "message"
        },
        {
            "pattern": "^(?i)docs(\\s*\\(.*?\\))?:",
            "target": "docs",
            "on_property": "message"
        },
        {
            "pattern": "^(?i)deps(\\s*\\(.*?\\))?:",
            "target": "dependency",
            "on_property": "message"
        },
        {
            "pattern": "^(?i)test(\\s*\\(.*?\\))?:",
            "target": "test",
            "on_property": "message"
        },
        {
            "pattern": "^(?i)(chore|config|ci|workflow|ruff)(\\s*\\(.*?\\))?:",
            "target": "chore",
            "on_property": "message"
        },
        {
            "pattern": ".*\\[skip ci\\].*",
            "target": "ignore",
            "on_property": "message"
        },
        {
            "pattern": "(?i)^chore: bump to dev version.*",
            "target": "ignore",
            "on_property": "message"
        },
        {
            "pattern": "(?i)^chore: release version.*",
            "target": "ignore",
            "on_property": "message"
        },
        {
            "pattern": "(?i)^Merge (pull request|branch).*",
            "target": "ignore",
            "on_property": "message"
        },
        {
            "pattern": "(?i)^(Update|Fixed|Fix|CI|Docs|Improved|Instructions|New|allow|New option) .*",
            "target": "chore",
            "on_property": "message"
        }
    ],
    "duplicate_filter": {
        "pattern": "^(v)?\\d+\\.\\d+\\.\\d+.*",
        "on_property": "title"
    },
    "base_branches": [
        "main"
    ]
}