    "ignore_labels": [
        "ignore",
        "no-changelog"
    ],
    "sort": "DESC",
    "template": "âš ï¸ **IMPORTANT**: This integration requires the corresponding Home Assistant Add-on to be updated. Please ensure you are running the latest version of the [WhatsApp Add-on](https://github.com/FaserF/hassio-addons/tree/master/whatsapp).\n\n# Changelog\n\n#{{CHANGELOG}}\n",
    "pr_template": "- #{{TITLE}} (#{{NUMBER}})",
    "commit_template": "- #{{TITLE}}",
    "empty_template": "No significant changes in this release.",
    "label_extractor": [
        {
            "pattern": "(?i).*\\[skip ci\\].*",
            "target": "ignore",
            "on_property": "title"
        },
        {
            "pattern": "(?i)^(chore: release|chore: bump|chore: auto-fix|ci fix|update release).*\\b",
            "target": "ignore",
            "on_property": "title"
        },
        {
            "pattern": "(?i)^(merge pull request|merge branch).*\\b",
            "target": "ignore",
            "on_property": "title"
        },
        {
            "pattern": "(?i)^(feat|feature|add)\\b.*",
            "target": "âœ¨ Features",
            "on_property": "title"
        },
        {
            "pattern": "(?i)^(fix|bug|patch|fixed|fixes)\\b.*",
            "target": "ğŸ› Bug Fixes",
            "on_property": "title"
        },
        {
            "pattern": "(?i)^(deps|dependenc|update).*\\b",
            "target": "ğŸ“¦ Dependencies",
            "on_property": "title"
        },
        {
            "pattern": "(?i)^(docs|documentation)\\b.*",
            "target": "ğŸ“ Documentation",
            "on_property": "title"
        },
        {
            "pattern": "(?i)^(test|pytest)\\b.*",
            "target": "ğŸ§ª Tests",
            "on_property": "title"
        },
        {
            "pattern": "(?i)^(chore|config|ci|workflow|ruff)\\b.*",
            "target": "ğŸ”§ Maintenance & CI",
            "on_property": "title"
        }
    ],
    "duplicate_filter": {
        "pattern": ".*",
        "on_property": "title"
    },
    "base_branches": [
        "main"
    ]
}
